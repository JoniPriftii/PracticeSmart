@using Microsoft.AspNetCore.Identity
@using Practice.ViewModel
@model IEnumerable<UserAndRoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register new User</a>
        </div>
    </div> 

<h1>Index</h1>
@if (Model.Any())
{
    @foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
               FirstName : @user.Employees.FirstName
            </div>
             <div class="card-header">
                LastName : @user.Employees.LastName
            </div>
            <div class="card-header">
                Department: @user?.Employees.Departments?.Name
            </div>
            <div class="card-header">
               JobTitle : @user?.Employees.Jobs?.JobTitle
            </div>
            <div class="card-header">
                RoleName : <p id="@user.Employees.Id"></p>
            </div>
            <select onchange="ChangeRole('@Url.Action("sendData","UsersManager")','@user.Employees.Id',this)" style="width:30%;">
                @foreach(IdentityRole role in ViewBag.roleList)
                {
                    if(role.Id == user?.Role?.Id)
                    {
                        <option value="@role.Id" selected>@role.Name</option>
                    }
                    else
                    {
                        <option value="@role.Id" >@role.Name</option>
                    }

                }
            </select>
            
            
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@user.Employees.Id" class="btn btn-success">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
                <a asp-action="Details" asp-route-id="@user.Employees.Id" class="btn btn-success">Details</a>
            </div>
        </div>
    }
}

<script>
 function ChangeRole(url,userid,result)
 {
     var vlera = $(result).val();
        $.ajax({
            type: "POST",
            url: url,
            data:{userid:userid, roleid:vlera},
            success: function(response){
               $('#'+userid).text(response);
            }
          });
 }
</script>

