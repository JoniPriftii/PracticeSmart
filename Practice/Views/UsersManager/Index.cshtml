@model IEnumerable<Emplyees>
@{
    ViewData["Title"] = "Index";
}

<div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register new User</a>
        </div>
    </div> 

<h1>Index</h1>
@if (Model.Any())
{
    @foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
               FirstName : @user.FirstName
            </div>
             <div class="card-header">
                LastName : @user.LastName
            </div>
            <div class="card-header">
                Department: @user?.Departments?.Name
            </div>
            <div class="card-header">
               JobTitle : @user?.Jobs?.JobTitle
            </div>
            
            
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-success">Details</a>
            </div>
        </div>
    }
}

