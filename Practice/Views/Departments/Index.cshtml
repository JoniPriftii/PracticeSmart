@model IEnumerable<Practice.Models.Departments>
@using Practice.Helper;
@{
    ViewData["Title"] = "Index";
}



<p>
     <a  class="btn btn-success" onclick="DisplayModalStacked('@Url.Action("Create","Departments")',1)">Add Departament</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locations)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Find.GetEmployeeName(ViewBag.Context ,item.ManagerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locations.City)
            </td>
            <td>
                <a class="btn btn-primary" onclick="DisplayModalStacked('@Url.Action("Edit","Departments" ,new{id = @item.Id})',1 )" >Edit</a> |
                <a class="btn btn-primary" onclick="DisplayModalStacked('@Url.Action("Details","Departments", new{id = @item.Id})',1)">Details</a> |
                <a class="btn btn-danger" onclick="DisplayModalStacked('@Url.Action("Delete","Departments", new{id = @item.Id})',1)">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
