@model Practice.Models.Countries

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Modal title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12">            
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RegionsId" class="control-label"></label>
                    <select asp-for="RegionsId" class="form-control" asp-items="ViewBag.RegionsId"></select>
                </div>          
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="button"
            onclick="Create('@Url.Action("CreateCountries","Countries")')" class="btn btn-primary">
        Create
    </button>
</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    function Create(url )
    {
        var name = $("#Name").val();
        var region = $("#RegionsId").val();
        $.ajax({
            type:"POST",
            url: url,
             data:{Name:name, RegionsId:region},
             success:function(response)
             {
                 location.reload();
             }
        })


    }
</script>
